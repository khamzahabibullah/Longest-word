
<div class="container">
  <h1>New Game</h1>
  <ul>
    <% @letters.each do |letter| %>
      <li><%= letter %></li>
    <% end %>
  </ul>
  <form action="/score" method='post'>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" name="word">
    <input type="submit">
    <input type="hidden" name="grid" value=<%=@letters.join%> />
  </form>
</div>
